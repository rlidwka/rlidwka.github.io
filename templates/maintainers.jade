
include badges

mixin maintainers(maintainers)
  table.table.table-striped
    tbody
      for maintainer in maintainers
        +maintainer-row(maintainer)

mixin maintainer-row(maintainer)
  tr
    td
      img(src=maintainer.avatar, width=20, height=20, style='vertical-align:middle')
    td
      a(href='https://github.com/' + maintainer.github)= maintainer.name
    td
      if maintainer.twitter
        a(href='https://twitter.com/' + maintainer.twitter)= '@' + maintainer.twitter
    td
      a(href='https://www.npmjs.org/~' + maintainer.npm)
        +badge('/badge/packages-' + Number(maintainer.packages) + '-blue')
    td
      if maintainer.gittip
        +badge-gittip(maintainer.gittip)
      else
        +badge('/badge/tips-N%2FA-lightgrey')
